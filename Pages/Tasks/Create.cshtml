@page
@model SoftOne.Pages.Tasks.Create
@{
    ViewData["Title"] = "Create";
}

<div class="col-sm-8">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Add New Task</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Tasks.Title"></label>
                <input asp-for="Tasks.Title" class="form-control" />
                <span asp-validation-for="Tasks.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tasks.Description"></label>
                <textarea asp-for="Tasks.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Tasks.Description" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="Tasks.IsCompleted" class="form-check-input" />
                <label class="form-check-label" asp-for="Tasks.IsCompleted">Completed</label>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Create Task</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
