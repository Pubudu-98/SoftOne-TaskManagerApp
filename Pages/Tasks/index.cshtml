@page
@model SoftOne.Pages.Tasks.IndexModel
@{
    ViewData["Title"] = "Tasks List";
}

<h2 class="text-center mb-3">List of Tasks</h2>
<a class="btn btn-primary mb-3" href="/Tasks/Create">Add New Task</a>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.TasksList) {
            <tr>
                <td>@task.Id</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td>@task.UpdatedAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space: nowrap;">
                    <a class="btn btn-primary btn-sm" href="/Tasks/Edit/@task.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Tasks/Delete/@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
