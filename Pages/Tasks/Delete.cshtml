@page "{id:int}"
@model SoftOne.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<div class="col-sm-8">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Delete Task</h2>
        <h3>Are you sure you want to delete this task?</h3>
        <div>
            <h4>Task</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Title
                </dt>
                <dd class="col-sm-10">
                    @Model.Title
                </dd>
                <dt class="col-sm-2">
                    Description
                </dt>
                <dd class="col-sm-10">
                    @Model.Description
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
