@page "{id:int}"
@model SoftOne.Pages.Tasks.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="col-sm-8">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-5">Edit Task</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input asp-for="IsCompleted" class="form-check-input" />
                <label class="form-check-label" asp-for="IsCompleted">Completed</label>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Update Task</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
